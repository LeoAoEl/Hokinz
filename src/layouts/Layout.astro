---
import Footer from "@components/shared/Footer.astro";
import Navbar from "@components/shared/Navbar.astro";
import ScrollToTop from "@components/ScrollTop";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <script>
      document.documentElement.classList.add("js");
    </script>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.avif" />
    <meta name="generator" content={Astro.generator} />
    <title>Hokinz</title>
  </head>
  <body>
    <Navbar />
    <main
      class="bg-gradient-to-r from-black via-purple-950 to-black scroll-smooth transition-all ease-in-out"
    >
      <slot />
    </main>
    <Footer />
    <ScrollToTop client:load />
    <script src="https://unpkg.com/taos@1.0.5/dist/taos.js" defer></script>
  </body>
</html>
