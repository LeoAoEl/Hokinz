---
import Container from "@components/shared/Container.astro";
import ProfileCard from "./ProfileCard.astro";
import { OurTeam } from "@constants/team";
---

<section
  class="pb-16 delay-[20ms] duration-[400ms] taos:translate-y-[50%] taos:opacity-0"
  data-taos-duration="200"
>
  <Container>
    <div class="mb-8">
      <h2 class="text-4xl md:text-6xl text-center font-bold text-blanco mb-6">
        Conoce nuestro equipo
      </h2>
      <p class="text-base text-blanco/70 text-center">
        These people work on making our product best.
      </p>
    </div>
    <div
      class="grid grid-cols-2 gap-6 md:flex md:flex-wrap md:justify-center md:gap-y-14 max-w-3xl mx-auto lg:max-w-full"
    >
      {
        OurTeam.map((member) => (
          <ProfileCard
            name={member.name}
            role={member.role}
            image={member.image}
            route={member.route}
          />
        ))
      }
    </div>
  </Container>
</section>
