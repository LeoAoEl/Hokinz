---
import { Astronav, MenuIcon, MenuItems, StickyHeader } from "astro-navbar";
import Link from "./Link.astro";
import { Image } from "astro:assets";
import logo2 from "@assets/logo.avif";
import { navbarRoutes } from "@constants/rutas";
import Container from "./Container.astro";
---

<div
  class="md:bg-fixed w-full h-[80vh] md:h-screen bg-cover bg-center transition-all ease-in-out overflow-hidden"
  style="background-image: url('https://images.unsplash.com/photo-1575195372639-373ecc8590f9?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');"
>
  <StickyHeader
    class="gap-6 z-20 transition-all w-full ease-in-out bg-transparent top-0"
    scrollY={50}
  >
    <div class="max-w-screen-xl mx-auto px-8 md:px-10 leading-tight">
      <Astronav closeOnClick>
        <div
          class="flex justify-between items-center flex-col lg:flex-row relative w-full"
        >
          <div>
            <div class="flex justify-between items-center w-full gap-4">
              <a href="/" class="flex flex-row items-center py-4">
                <Image
                  src={logo2}
                  alt="Logo"
                  class="w-24 h-auto"
                  loading={"eager"}
                />
                <div
                  class="text-center text-blanco flex flex-col font-bold prose-lg ml-2"
                >
                  <span class="text-4xl">Hokinz</span>
                </div>
              </a>
              <div class="block md:hidden">
                <MenuIcon class="w-6 h-6 text-blanco" />
              </div>
            </div>
          </div>
          <MenuItems
            class="hidden lg:flex lg:items-center lg:w-auto py-4 md:py-0"
          >
            <ul
              class="flex flex-col lg:flex-row md:gap-0 gap-10 items-center mt-4 md:mt-0 justify-center"
            >
              {
                navbarRoutes.map(({ path, name }) => (
                  <Link href={path} name={name} />
                ))
              }
            </ul>
          </MenuItems>
        </div>
      </Astronav>
    </div>
  </StickyHeader>

  <!-- Content Section -->
  <main class="justify-evenly block md:bottom-0 absolute w-full text-blanco">
    <Container>
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Left Component (Title) -->
        <div class="md:w-2/3 w-full text-center md:text-left">
          <h1 class="md:text-5xl text-3xl font-bold mb-4">A quantum leap in</h1>
          <h2 class="md:text-5xl text-3xl font-semibold mb-4">
            age appropriate
          </h2>
          <h3 class="md:text-5xl text-3xl font-semibold mb-4">
            compliance & design
          </h3>
        </div>

        <!-- Right Component (Card with Download Button) -->
        <div
          class="md:w-1/3 flex items-center justify-center md:justify-end text-center w-full"
        >
          <div class="bg-lightPurple bg-opacity-90 rounded-lg p-4 md:p-8">
            <div class="mb-4">
              <span class="text-sm md:text-lg font-semibold">
                State of the Age: Market Report</span
              >
            </div>

            <diV class="text-xs md:text-sm mb-4">
              <p>Our view on how the market today manages</p>
              <p>age appropriate compliance and design</p>
            </diV>
            <button
              class="bg-blanco hover:opacity-90 transition-all text-purple-950 font-bold py-2 px-4 rounded w-full hover:scale-105 ease-in"
            >
              DOWNLOAD
            </button>
          </div>
        </div>
      </div>
    </Container>
  </main>
</div>

<style is:global>
  .astronav-dropdown:hover .dropdown-toggle {
    display: block;
  }
</style>
